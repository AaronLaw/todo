<h1>Listing tasks</h1>
<div id='new_task_area'>

	<%= simple_form_for(@task) do |f| %>

	    <%= f.input :name , :label => false %>

	    <%= f.input :done , :as => :hidden,  :input_html => {:value => false }%>
	
		 <%= f.input :list_id , :as => :hidden,   :input_html => {:value => @current_list.id }%>

	    <%= f.button :submit %>

	<% end %>
	
</div>

	<%= link_to 'New List', new_list_path %>


<div id='tabs'>
	<ul>
		<% @count = 1%>
		<% @lists.each do |list| %>
		<li>
			<a href="<%= '#' + 'tabs-' + @count.to_s %>"><%= list.name %></a>
		</li>
		<% @count += 1%>
		<% end %>
	</ul>

	
	<% @count = 1%>
	<% @lists.each do |list| %>
	
	<div id='tabs-<%= @count %>'>
	
		<ul id='todo_list'>
			<% list.tasks.each do |task| %>

				<% unless task.done %>
					<%= simple_form_for(task) do |f| %>

			 		<li> 
					<%= f.input :done ,   :input_html => { :class => 'box'  } , :label => false  %>
					<%= f.button :submit ,  :class => 'hidden'   %>
					<%= task.name %>   
					<%= link_to 'X', task, :confirm => 'Are you sure?', :method => :delete %>

			  		</li>
		
					<% end %>
				<% end %>
			<% end %>
		</ul>
	
		--Completed--
		<ul>
			<% @done_tasks.each do |task| %>
				<li><%= task.name %> </li>
				<% end %>
		</ul>
	
	</div>
	<% @count += 1%>
	
	<%end%>
	
</div>


<script>
	$('.box').click(function(event) {
		$(this).parent().next().click();
	});
	
	$(function() {
		$( "#tabs" ).tabs();
	});

</script>


